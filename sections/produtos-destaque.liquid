<div class="page-width" style="margin: 40px auto; padding: 0 20px;">
  {% if section.settings.title != blank %}
    <h2 style="text-align: center; margin-bottom: 30px; font-size: 1.8rem; text-transform: uppercase;">{{ section.settings.title }}</h2>
  {% endif %}

  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
    {% assign collection = collections[section.settings.collection] %}
    
    {% for product in collection.products limit: section.settings.product_limit %}
      <div class="product-card" style="text-align: center; border: 1px solid #eee; padding: 10px; border-radius: 8px;">
        <a href="{{ product.url }}" style="text-decoration: none; color: inherit;">
          <div style="aspect-ratio: 3/4; overflow: hidden; margin-bottom: 10px;">
            <img src="{{ product.featured_image | img_url: '400x533', crop: 'center' }}" alt="{{ product.title }}" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
          <h3 style="font-size: 16px; margin: 10px 0 5px;">{{ product.title }}</h3>
          <p style="font-weight: bold; color: #000;">{{ product.price | money }}</p>
        </a>
      </div>
    {% else %}
      {% for i in (1..4) %}
        <div style="text-align: center; border: 1px solid #eee; padding: 10px; border-radius: 8px; color: #ccc;">
          <div style="aspect-ratio: 3/4; background: #f4f4f4; margin-bottom: 10px;"></div>
          <p>Produto Exemplo</p>
          <p>R$ 0,00</p>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Produtos em Destaque",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da Seção",
      "default": "Destaques da Semana"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Selecione a Coleção"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 4,
      "max": 12,
      "step": 4,
      "label": "Limite de Produtos",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Produtos em Destaque"
    }
  ]
}
{% endschema %}