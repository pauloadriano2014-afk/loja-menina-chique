<style>
  .banner-full-width {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    height: 600px; /* Altura fixa para Desktop */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .banner-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  .banner-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #fff;
    max-width: 800px;
    padding: 20px;
  }
  .banner-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 2;
  }
  
  /* Ajuste para celular */
  @media (max-width: 768px) {
    .banner-full-width { height: 500px; }
  }
</style>

<div class="banner-full-width">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '1800x' }}" alt="Banner" class="banner-img">
  {% else %}
    <div class="banner-img" style="background:#333;"></div>
  {% endif %}
  
  <div class="banner-overlay"></div>
  
  <div class="banner-content">
    <h1 style="font-size: 3.5rem; font-weight: bold; margin-bottom: 10px; text-transform: uppercase;">{{ section.settings.title }}</h1>
    <a href="{{ section.settings.button_link }}" style="display: inline-block; padding: 15px 40px; background: #fff; color: #000; text-decoration: none; font-weight: bold; margin-top: 20px;">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Banner Full Width",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagem" },
    { "type": "text", "id": "title", "label": "Título", "default": "SUA MELHOR VERSÃO" },
    { "type": "text", "id": "button_label", "label": "Botão", "default": "COMPRAR AGORA" },
    { "type": "url", "id": "button_link", "label": "Link" }
  ],
  "presets": [{ "name": "Banner Full Width" }]
}
{% endschema %}