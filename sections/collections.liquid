<div class="page-width collection-container">
  <h1 class="collection-title">{{ collection.title }}</h1>

  {% comment %} SEGURO: Verifica se tem produtos antes de tentar mostrar {% endcomment %}
  {% if collection.products_count > 0 %}
    
    <div class="collection-products-grid">
      {% for product in collection.products limit: 50 %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-link">
            <div class="image-wrapper">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | img_url: '400x500', crop: 'center' }}" 
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="product-info">
              <p class="product-title">{{ product.title }}</p>
              <p class="product-price">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

  {% else %}
    <div style="text-align: center; padding: 50px; background: #f9f9f9;">
      <h3 style="color: #ff007f;">Nenhum produto encontrado.</h3>
      <p>Verifique no painel se o produto tem a TAG correta: <strong>fitness</strong> (minúsculo).</p>
    </div>
  {% endif %}
</div>

<style>
  /* CONFIGURAÇÃO GERAL */
  .collection-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    background: #fff;
  }
  .collection-title {
    text-align: center;
    text-transform: uppercase;
    font-size: 24px;
    margin-bottom: 30px;
    border-bottom: 2px solid #ff007f;
    display: inline-block;
  }

  /* O GRID QUE CONSERTA A LEGGING GIGANTE */
  .collection-products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 colunas no PC */
    gap: 20px;
    width: 100%;
  }

  /* CARTÃO DO PRODUTO */
  .product-card {
    border: 1px solid #eee;
    border-radius: 5px;
    overflow: hidden;
    transition: 0.3s;
    background: #fff;
  }
  .product-card:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-color: #ff007f;
  }
  
  .image-wrapper {
    width: 100%;
    aspect-ratio: 4 / 5; /* Formato Retrato Fixo */
    overflow: hidden;
    background: #f4f4f4;
  }
  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Preenche sem esticar */
    transition: transform 0.5s;
  }
  .product-card:hover img { transform: scale(1.05); }

  .product-info { padding: 15px; text-align: center; }
  .product-title { margin: 0 0 5px; font-size: 14px; text-transform: uppercase; color: #333; height: 36px; overflow: hidden; }
  .product-price { font-weight: bold; color: #ff007f; font-size: 16px; margin: 0; }

  /* MOBILE (2 por linha) */
  @media (max-width: 768px) {
    .collection-products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
  }
</style>

{% schema %}
{ "name": "Collection Grid Fix", "settings": [] }
{% endschema %}