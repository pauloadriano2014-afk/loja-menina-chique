{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="page-width collection-container">
  <h1 class="collection-title">{{ collection.title }}</h1>

  <div class="collection-products">
    {% paginate collection.products by 20 %}
      {% for product in collection.products %}
        <div class="collection-product">
          <a href="{{ product.url }}" class="product-link">
            {% if product.featured_image %}
              <div class="image-wrapper">
                {% render 'image',
                  class: 'collection-product__image',
                  image: product.featured_image,
                  url: product.url,
                  width: 400,
                  height: 400,
                  crop: 'center'
                %}
              </div>
            {% endif %}
            <div class="collection-product__content">
              <p class="product-title">{{ product.title | escape }}</p>
              <p class="product-price">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}

      <div class="pagination-wrapper">
        {{ paginate | default_pagination }}
      </div>
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  /* Container Geral - Fundo Branco */
  .collection-container {
    background-color: #FFFFFF;
    padding: 40px 20px;
    color: #000000;
  }

  .collection-title {
    text-align: center;
    color: #000000;
    text-transform: uppercase;
    font-size: 2rem;
    margin-bottom: 40px;
    letter-spacing: 2px;
    border-bottom: 2px solid #FF1493; /* Linha Rosa */
    display: inline-block;
    padding-bottom: 10px;
  }

  /* Grid de Produtos */
  .collection-products {
    display: grid;
    /* Tamanho ajustado para evitar que o card fique gigante */
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); 
    gap: 30px;
  }

  /* Card do Produto */
  .collection-product {
    background-color: #FFFFFF;
    border: 1px solid #EEEEEE; /* Borda cinza suave */
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .collection-product:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1); /* Sombra suave */
    border-color: #FFC0CB; /* Borda Rosa Claro ao passar o mouse */
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-product:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .collection-product__content {
    padding: 15px;
    text-align: center;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-title {
    font-size: 1rem;
    margin: 0 0 10px 0;
    color: #333333;
    text-transform: uppercase;
    font-weight: 500;
  }

  .product-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #FF1493; /* PREÇO ROSA FORTE */
    margin: 0;
  }

  .pagination-wrapper {
    margin-top: 40px;
    text-align: center;
  }
  
  .pagination-wrapper a, .pagination-wrapper span {
    color: #333;
    padding: 10px;
  }
  
  .pagination-wrapper .current {
    color: #FF1493; /* Paginação Rosa */
    font-weight: bold;
  }
{% endstylesheet %}

