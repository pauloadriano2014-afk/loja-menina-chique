<style>
  /* HEADER CONTAINER */
  .site-header-container {
    background: #000;
    width: 100%;
    position: relative;
    border-bottom: 1px solid #333;
    z-index: 1000;
  }

  .header-wrapper {
    display: flex;
    align-items: center; /* Centraliza verticalmente */
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    padding: 15px 20px; /* Padding maior para respirar */
    min-height: 80px; /* Altura m√≠nima garantida */
  }

  /* LOGO */
  .logo { margin-right: 30px; display: block; line-height: 0; }
  .logo img { max-height: 55px; width: auto; }

  /* MENU DESKTOP */
  .desktop-nav {
    display: none;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap; /* Permite quebrar linha se a tela for pequena */
  }

  .nav-item { position: relative; padding: 10px 0; }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.5px;
    white-space: nowrap;
    display: flex;
    align-items: center;
    transition: color 0.3s;
  }

  .nav-link:hover { color: #ff007f; }
  .nav-link span { font-size: 10px; margin-left: 4px; color: #ff007f; }

  /* DROPDOWN */
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    min-width: 200px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    border-top: 3px solid #ff007f;
    z-index: 2000;
    border-radius: 0 0 5px 5px;
    flex-direction: column;
    margin-top: 10px; /* Afasta um pouco para n√£o cobrir a borda */
  }
  
  .nav-item:hover .dropdown-menu { display: flex; }

  .dropdown-menu a {
    color: #333;
    text-decoration: none;
    padding: 12px 20px;
    font-size: 13px;
    border-bottom: 1px solid #f0f0f0;
    transition: all 0.2s;
  }
  .dropdown-menu a:hover {
    background: #f9f9f9;
    color: #ff007f;
    padding-left: 25px;
  }

  /* √çCONES */
  .header-icons { display: flex; align-items: center; gap: 15px; }
  .header-icons a { color: #fff; font-size: 22px; text-decoration: none; }

  /* MOBILE TOGGLE */
  .mobile-toggle {
    display: block;
    font-size: 26px;
    background: none;
    border: none;
    color: #fff;
    cursor: pointer;
  }

  /* MOBILE DRAWER (GAVETA) */
  .mobile-nav-container {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff;
    border-top: 1px solid #ddd;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  .mobile-nav-container.active { display: block; }

  .mobile-item { border-bottom: 1px solid #eee; }
  
  .mobile-link-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
  }

  .mobile-link {
    text-decoration: none;
    color: #000;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    flex-grow: 1;
  }

  .accordion-btn {
    font-size: 20px;
    color: #ff007f;
    width: 40px;
    text-align: center;
    cursor: pointer;
    font-weight: bold;
  }

  .mobile-submenu { display: none; background: #f5f5f5; }
  .mobile-submenu.open { display: block; }
  
  .mobile-submenu a {
    display: block;
    padding: 12px 30px;
    color: #555;
    text-decoration: none;
    font-size: 13px;
    border-bottom: 1px solid #ddd;
  }

  @media (min-width: 900px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: flex; }
    .mobile-nav-container { display: none !important; }
  }
</style>

<div class="site-header-container">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="document.getElementById('mobileNav').classList.toggle('active')">‚ò∞</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="desktop-nav">
      {% for link in linklists[section.settings.menu].links %}
        <div class="nav-item">
          <a href="{{ link.url }}" class="nav-link">
            {{ link.title }}
            {% if link.links != blank %} <span>‚ñº</span> {% endif %}
          </a>
          {% if link.links != blank %}
            <div class="dropdown-menu">
              {% for child in link.links %}
                <a href="{{ child.url }}">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="header-icons">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <div id="mobileNav" class="mobile-nav-container">
    {% for link in linklists[section.settings.menu].links %}
      <div class="mobile-item">
        <div class="mobile-link-wrapper">
          <a href="{{ link.url }}" class="mobile-link">{{ link.title }}</a>
          {% if link.links != blank %}
            <span class="accordion-btn" onclick="this.parentElement.nextElementSibling.classList.toggle('open'); this.innerText = this.innerText == '+' ? '-' : '+'">+</span>
          {% endif %}
        </div>
        {% if link.links != blank %}
          <div class="mobile-submenu">
            {% for child in link.links %}
              <a href="{{ child.url }}">{{ child.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}