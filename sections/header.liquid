<style>
  /* --- ESTRUTURA GERAL --- */
  .site-header-bg {
    background: #000;
    width: 100vw; 
    margin-left: calc(50% - 50vw);
    border-bottom: 1px solid #333;
    position: relative;
    z-index: 10000;
    box-sizing: border-box;
  }

  .header-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    height: 90px; /* Altura confortÃ¡vel para logo horizontal */
    position: relative;
  }

  /* --- LOGO HORIZONTAL (DESKTOP) --- */
  .logo img { 
    /* O Segredo da Horizontal: Altura controlada, Largura livre */
    max-height: 70px; 
    max-width: 280px; /* Permite que ela estique para o lado */
    width: auto; 
    display: block; 
    border: none; 
    object-fit: contain; /* Garante que a logo inteira apareÃ§a */
  }
  .logo { text-decoration: none; display: flex; align-items: center; }

  /* MENU DESKTOP */
  .desktop-nav {
    display: none;
    height: 100%;
    align-items: center;
    gap: 25px;
  }

  .nav-item {
    height: 100%;
    display: flex;
    align-items: center;
    position: relative;
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    padding: 0 5px;
    white-space: nowrap;
    cursor: pointer;
  }
  .nav-link:hover { color: #ff007f; }
  .nav-link span { font-size: 10px; margin-left: 3px; color: #ff007f; }

  /* DROPDOWN */
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    min-width: 200px;
    border-top: 3px solid #ff007f;
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    flex-direction: column;
    z-index: 10001;
  }

  .nav-item:hover .dropdown-menu { display: flex; }

  .dropdown-menu a {
    color: #333;
    padding: 12px 20px;
    text-decoration: none;
    border-bottom: 1px solid #eee;
    font-size: 13px;
    transition: 0.2s;
  }
  .dropdown-menu a:hover {
    background: #f5f5f5;
    color: #ff007f;
    padding-left: 25px;
  }

  /* --- CARRINHO BRANCO --- */
  .header-icons {
    display: flex;
    align-items: center;
  }
  
  .cart-icon-link {
    color: #fff !important;
    font-size: 26px !important;
    text-decoration: none !important;
    background: none !important;
    border: none !important;
    box-shadow: none !important;
    padding: 10px !important;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0 !important;
  }
  
  .cart-icon-link svg {
    fill: #fff;
    width: 26px;
    height: 26px;
  }

  /* MOBILE TOGGLE */
  .mobile-toggle { font-size: 28px; color: #fff; background: none; border: none; cursor: pointer; }
  
  /* GAVETA MOBILE */
  .mobile-nav {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  }
  .mobile-nav.active { display: block; }
  
  .mobile-link-row {
    display: flex; justify-content: space-between; align-items: center;
    padding: 15px; border-bottom: 1px solid #eee;
  }
  .mobile-link { color: #000; text-decoration: none; font-weight: bold; text-transform: uppercase; font-size: 14px; }
  .plus-btn { color: #ff007f; font-weight: bold; font-size: 20px; width: 40px; text-align: center; }
  
  .mobile-sub { display: none; background: #f9f9f9; padding-left: 20px; }
  .mobile-sub.show { display: block; }
  .mobile-sub a { display: block; padding: 12px; color: #555; text-decoration: none; border-bottom: 1px solid #ddd; }

  /* --- RESPONSIVIDADE (CELULAR) --- */
  @media (max-width: 900px) {
    .mobile-toggle { display: block; }
    .desktop-nav { display: none; }
    
    /* Barra mais compacta no celular */
    .header-wrapper { height: 70px; padding: 0 15px; }
    
    /* AJUSTE FINO DA LOGO HORIZONTAL NO CELULAR */
    .logo img { 
      max-height: 45px; /* Altura segura */
      max-width: 180px; /* Largura segura para nÃ£o bater nos Ã­cones */
    } 
  }
  
  @media (min-width: 901px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: flex; }
    .mobile-nav { display: none !important; }
  }
</style>

<div class="site-header-bg">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="document.getElementById('mobileNav').classList.toggle('active')">â˜°</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        <span style="color: #fff; font-weight: bold; font-size: 20px;">{{ shop.name }}</span>
      {% endif %}
    </a>

    <nav class="desktop-nav">
      {% for link in linklists[section.settings.menu].links %}
        <div class="nav-item">
          <a href="{{ link.url }}" class="nav-link">{{ link.title }} {% if link.links != blank %} <span>â–¾</span> {% endif %}</a>
          {% if link.links != blank %}
            <div class="dropdown-menu">
              {% for child in link.links %}
                <a href="{{ child.url }}">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>

    <div class="header-icons">
      <a href="/cart" class="cart-icon-link">ðŸ›’</a>
    </div>
  </div>

  <div id="mobileNav" class="mobile-nav">
    {% for link in linklists[section.settings.menu].links %}
      <div>
        <div class="mobile-link-row">
          <a href="{{ link.url }}" class="mobile-link">{{ link.title }}</a>
          {% if link.links != blank %}
            <div class="plus-btn" onclick="this.parentElement.nextElementSibling.classList.toggle('show'); this.innerText = this.innerText=='+'?'-':'+'">+</div>
          {% endif %}
        </div>
        {% if link.links != blank %}
          <div class="mobile-sub">
            {% for child in link.links %}
              <a href="{{ child.url }}">{{ child.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo Horizontal" }
  ]
}
{% endschema %}