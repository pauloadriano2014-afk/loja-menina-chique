<style>
  .site-header {
    background: #000; /* Fundo PRETO para sumir com a borda da logo */
    border-bottom: 1px solid #333;
    position: relative;
    padding: 10px 0; /* Menos espa√ßamento para a logo dominar */
    z-index: 1000;
  }
  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  
  /* Logo Otimizada */
  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1; /* Faz a logo ocupar o espa√ßo central */
  }
  .logo img {
    max-height: 70px; /* Aumentei o tamanho para aparecer bem */
    width: auto;
    object-fit: contain;
  }

  /* √çcones em BRANCO */
  .mobile-toggle {
    display: block;
    font-size: 26px;
    cursor: pointer;
    background: none;
    border: none;
    color: #fff; /* √çcone branco */
    padding: 0;
  }
  
  .header-icons a {
    text-decoration: none;
    color: #fff !important; /* Carrinho branco */
    font-size: 24px;
  }

  /* Menu Mobile (Gaveta) */
  .mobile-nav {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff; /* O menu que abre continua branco para leitura */
    border-bottom: 1px solid #ddd;
    box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    flex-direction: column;
    z-index: 999;
  }
  .mobile-nav.active { display: flex; }
  .mobile-nav a {
    padding: 15px 20px;
    border-bottom: 1px solid #f4f4f4;
    text-decoration: none;
    color: #000;
    font-size: 16px;
    font-weight: 500;
  }

  /* Desktop */
  .desktop-nav { display: none; }
  
  @media (min-width: 769px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: block; }
    .desktop-nav a { color: #fff; margin: 0 15px; text-decoration: none; text-transform: uppercase; font-size: 13px; }
    .mobile-nav { display: none !important; }
    .logo { flex-grow: 0; } /* No desktop a logo n√£o precisa esticar tanto */
  }
</style>

<header class="site-header">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="toggleMenu()">‚ò∞</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        <span style="color: #fff; font-weight: bold; font-size: 20px;">{{ shop.name }}</span>
      {% endif %}
    </a>
    
    <div class="header-icons">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <nav id="mobileMenu" class="mobile-nav">
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </nav>
</header>

<script>
  function toggleMenu() {
    var menu = document.getElementById('mobileMenu');
    menu.classList.toggle('active');
  }
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo da Loja" }
  ]
}
{% endschema %}