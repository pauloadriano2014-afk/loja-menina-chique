<style>
  /* For√ßa a largura total da tela (Full Width) */
  .site-header-container {
    background: #000;
    width: 100vw; 
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    border-bottom: 1px solid #333;
    z-index: 1000;
  }

  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto; /* Centraliza o conte√∫do dentro da faixa preta */
    padding: 15px 20px;
  }
  
  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 22px;
  }
  .logo img {
    max-height: 60px;
    width: auto;
  }

  /* Menu Desktop (Links) */
  .desktop-nav {
    display: none; /* Escondido no celular */
    gap: 25px;
  }
  .desktop-nav a {
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    text-transform: uppercase;
    font-weight: 500;
    transition: color 0.3s;
  }
  .desktop-nav a:hover {
    color: #ccc;
  }

  /* √çcones */
  .header-icons a {
    text-decoration: none;
    color: #fff;
    font-size: 24px;
  }
  
  /* Mobile Toggle */
  .mobile-toggle {
    display: block;
    font-size: 26px;
    background: none;
    border: none;
    color: #fff;
    cursor: pointer;
  }

  /* Gaveta Mobile */
  .mobile-nav {
    display: none;
    background: #fff;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    z-index: 999;
  }
  .mobile-nav a {
    display: block;
    padding: 15px 20px;
    border-bottom: 1px solid #eee;
    color: #000;
    text-decoration: none;
  }
  .mobile-nav.active { display: block; }

  /* Responsividade Desktop */
  @media (min-width: 769px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: flex; } /* Aparece no PC */
  }
</style>

<div class="site-header-container">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="document.getElementById('mobileMenu').classList.toggle('active')">‚ò∞</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="desktop-nav">
      {% for link in linklists[section.settings.menu].links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </nav>
    
    <div class="header-icons">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <div id="mobileMenu" class="mobile-nav">
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}