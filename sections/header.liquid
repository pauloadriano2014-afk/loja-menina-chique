<style>
  /* FAIXA PRETA TOTAL */
  .header-section-wrapper {
    background-color: #000;
    width: 100%; /* Corrigido: 100% respeita a barra de rolagem */
    border-bottom: 1px solid #333;
    position: relative;
    z-index: 1000;
  }

  /* CONTE√öDO CENTRALIZADO */
  .header-content-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* LOGO */
  .header-logo img {
    max-height: 55px;
    width: auto;
    display: block;
  }

  /* MENU DESKTOP (HORIZONTAL) */
  .desktop-navigation {
    display: none;
    height: 100%;
    align-items: center;
    gap: 25px;
  }

  .menu-item {
    height: 100%;
    display: flex;
    align-items: center;
    position: relative;
  }

  .menu-link {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
    cursor: pointer;
    transition: color 0.2s;
  }

  .menu-link:hover { color: #ff007f; }
  .menu-link span { font-size: 10px; margin-left: 4px; color: #ff007f; }

  /* DROPDOWN (O Menu que desce) */
  .submenu-dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    min-width: 220px;
    border-top: 3px solid #ff007f;
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    flex-direction: column;
    padding: 5px 0;
    z-index: 1001;
  }

  .menu-item:hover .submenu-dropdown { display: flex; }

  .submenu-link {
    color: #333;
    text-decoration: none;
    padding: 12px 20px;
    font-size: 13px;
    border-bottom: 1px solid #f5f5f5;
    transition: all 0.2s;
  }

  .submenu-link:hover {
    background: #fafafa;
    color: #ff007f;
    padding-left: 25px;
  }

  /* √çCONES */
  .icon-wrapper a {
    color: #fff;
    font-size: 22px;
    text-decoration: none;
    margin-left: 15px;
  }

  /* MOBILE */
  .mobile-trigger {
    display: block;
    background: none;
    border: none;
    color: #fff;
    font-size: 24px;
    cursor: pointer;
  }

  .mobile-drawer {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff;
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    border-top: 1px solid #ddd;
  }
  .mobile-drawer.is-open { display: block; }

  .mobile-row { border-bottom: 1px solid #eee; }
  .mobile-header { display: flex; justify-content: space-between; align-items: center; padding: 15px 20px; }
  .mobile-a { text-decoration: none; color: #000; font-weight: bold; text-transform: uppercase; font-size: 14px; }
  .mobile-btn { color: #ff007f; font-weight: bold; font-size: 20px; width: 40px; text-align: center; cursor: pointer; }
  
  .mobile-children { display: none; background: #f9f9f9; padding-left: 20px; }
  .mobile-children.show { display: block; }
  .mobile-child-a { display: block; padding: 12px 15px; color: #555; text-decoration: none; border-bottom: 1px solid #ddd; font-size: 13px; }

  @media (min-width: 900px) {
    .mobile-trigger { display: none; }
    .desktop-navigation { display: flex; }
    .mobile-drawer { display: none !important; }
  }
</style>

<div class="header-section-wrapper">
  <div class="header-content-container">
    
    <button class="mobile-trigger" onclick="document.getElementById('mobileMenu').classList.toggle('is-open')">‚ò∞</button>

    <a href="/" class="header-logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="desktop-navigation">
      {% for link in linklists[section.settings.menu].links %}
        <div class="menu-item">
          <a href="{{ link.url }}" class="menu-link">
            {{ link.title }}
            {% if link.links != blank %} <span>‚ñæ</span> {% endif %}
          </a>
          
          {% if link.links != blank %}
            <div class="submenu-dropdown">
              {% for child in link.links %}
                <a href="{{ child.url }}" class="submenu-link">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="icon-wrapper">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <div id="mobileMenu" class="mobile-drawer">
    {% for link in linklists[section.settings.menu].links %}
      <div class="mobile-row">
        <div class="mobile-header">
          <a href="{{ link.url }}" class="mobile-a">{{ link.title }}</a>
          {% if link.links != blank %}
            <div class="mobile-btn" onclick="this.parentElement.nextElementSibling.classList.toggle('show'); this.innerText = this.innerText=='+'?'-':'+'">+</div>
          {% endif %}
        </div>
        {% if link.links != blank %}
          <div class="mobile-children">
            {% for child in link.links %}
              <a href="{{ child.url }}" class="mobile-child-a">{{ child.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}