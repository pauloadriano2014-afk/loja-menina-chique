<style>
  /* BASE DO HEADER - Fundo preto infinito */
  .site-header-bg {
    background: #000;
    width: 100%;
    border-bottom: 1px solid #333;
    position: relative;
    z-index: 10000; /* Z-index alt√≠ssimo pra ficar acima de tudo */
  }

  .header-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    height: 80px;
    position: relative; /* Importante para o dropdown posicionar */
  }

  .logo img { max-height: 50px; width: auto; display: block; }

  /* MENU DESKTOP */
  .desktop-nav {
    display: none;
    height: 100%;
    align-items: center;
    gap: 20px;
  }

  .nav-item {
    height: 100%;
    display: flex;
    align-items: center;
    position: relative; /* Pai do dropdown */
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    padding: 0 5px;
    white-space: nowrap;
    cursor: pointer;
  }
  .nav-link:hover { color: #ff007f; }

  /* DROPDOWN - FIXADO PARA N√ÉO SUMIR NO SCROLL */
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%; /* Cola embaixo do header */
    left: 0;
    background: #fff;
    min-width: 200px;
    border-top: 3px solid #ff007f;
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    flex-direction: column;
    z-index: 10001; /* Maior que o header */
  }

  .nav-item:hover .dropdown-menu { display: flex; }

  .dropdown-menu a {
    color: #333;
    padding: 12px 20px;
    text-decoration: none;
    border-bottom: 1px solid #eee;
    font-size: 13px;
    transition: 0.2s;
  }
  .dropdown-menu a:hover {
    background: #f5f5f5;
    color: #ff007f;
    padding-left: 25px;
  }

  /* MOBILE TOGGLE & √çCONES */
  .mobile-toggle { font-size: 24px; color: #fff; background: none; border: none; cursor: pointer; }
  .header-icons a { color: #fff; font-size: 22px; margin-left: 15px; text-decoration: none; }

  /* GAVETA MOBILE */
  .mobile-nav {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  }
  .mobile-nav.active { display: block; }
  
  .mobile-link-row {
    display: flex; justify-content: space-between; align-items: center;
    padding: 15px; border-bottom: 1px solid #eee;
  }
  .mobile-link { color: #000; text-decoration: none; font-weight: bold; text-transform: uppercase; font-size: 14px; }
  .plus-btn { color: #ff007f; font-weight: bold; font-size: 20px; width: 40px; text-align: center; }
  
  .mobile-sub { display: none; background: #f9f9f9; padding-left: 20px; }
  .mobile-sub.show { display: block; }
  .mobile-sub a { display: block; padding: 12px; color: #555; text-decoration: none; border-bottom: 1px solid #ddd; }

  @media (min-width: 900px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: flex; }
    .mobile-nav { display: none !important; }
  }
</style>

<div class="site-header-bg">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="document.getElementById('mobileNav').classList.toggle('active')">‚ò∞</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="desktop-nav">
      {% for link in linklists[section.settings.menu].links %}
        <div class="nav-item">
          <a href="{{ link.url }}" class="nav-link">{{ link.title }} {% if link.links != blank %} ‚ñæ {% endif %}</a>
          {% if link.links != blank %}
            <div class="dropdown-menu">
              {% for child in link.links %}
                <a href="{{ child.url }}">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>

    <div class="header-icons">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <div id="mobileNav" class="mobile-nav">
    {% for link in linklists[section.settings.menu].links %}
      <div>
        <div class="mobile-link-row">
          <a href="{{ link.url }}" class="mobile-link">{{ link.title }}</a>
          {% if link.links != blank %}
            <div class="plus-btn" onclick="this.parentElement.nextElementSibling.classList.toggle('show'); this.innerText = this.innerText=='+'?'-':'+'">+</div>
          {% endif %}
        </div>
        {% if link.links != blank %}
          <div class="mobile-sub">
            {% for child in link.links %}
              <a href="{{ child.url }}">{{ child.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}