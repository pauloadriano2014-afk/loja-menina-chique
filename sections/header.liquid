<style>
  /* For√ßa a largura total da tela (Full Width) */
  .site-header-container {
    background: #000;
    width: 100vw; 
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    border-bottom: 1px solid #333;
    z-index: 1000;
  }

  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    height: 80px;
  }
  
  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 22px;
  }
  .logo img {
    max-height: 60px;
    width: auto;
  }

  /* --- MENU DESKTOP --- */
  .desktop-nav {
    display: none;
    height: 100%;
    gap: 30px;
  }
  
  .nav-item {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: color 0.3s;
    padding: 0 5px;
    cursor: pointer;
  }
  
  .nav-link:hover {
    color: #ff007f;
  }

  /* O Dropdown */
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #ffffff;
    min-width: 220px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    border-top: 3px solid #ff007f;
    z-index: 2000;
    border-radius: 0 0 8px 8px;
    padding: 10px 0;
    flex-direction: column;
  }

  .nav-item:hover .dropdown-menu {
    display: flex;
    animation: fadeIn 0.3s ease;
  }

  .dropdown-menu a {
    color: #333 !important;
    text-decoration: none;
    padding: 12px 20px;
    font-size: 14px;
    text-transform: capitalize;
    border-bottom: 1px solid #f5f5f5;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .dropdown-menu a:hover {
    background-color: #f9f9f9;
    color: #ff007f !important;
    padding-left: 25px;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* √çcones e Mobile */
  .header-icons a { text-decoration: none; color: #fff; font-size: 24px; }
  .mobile-toggle { display: block; font-size: 26px; background: none; border: none; color: #fff; cursor: pointer; }
  .mobile-nav { display: none; background: #fff; position: absolute; top: 100%; left: 0; width: 100%; box-shadow: 0 5px 10px rgba(0,0,0,0.1); z-index: 999; }
  .mobile-nav a { display: block; padding: 15px 20px; border-bottom: 1px solid #eee; color: #000; text-decoration: none; }
  .mobile-nav.active { display: block; }

  @media (min-width: 900px) {
    .mobile-toggle { display: none; }
    .desktop-nav { display: flex; }
  }
</style>

<div class="site-header-container">
  <div class="header-wrapper">
    <button class="mobile-toggle" onclick="document.getElementById('mobileMenu').classList.toggle('active')">‚ò∞</button>

    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="desktop-nav">
      {% for link in linklists[section.settings.menu].links %}
        <div class="nav-item">
          <a href="{{ link.url }}" class="nav-link">
            {{ link.title }} {% if link.links != blank %} ‚ñæ {% endif %}
          </a>
          {% if link.links != blank %}
            <div class="dropdown-menu">
              {% for child_link in link.links %}
                <a href="{{ child_link.url }}">{{ child_link.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="header-icons">
      <a href="/cart">üõí</a>
    </div>
  </div>

  <div id="mobileMenu" class="mobile-nav">
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Header Full Width",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu Principal", "default": "main-menu" },
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}